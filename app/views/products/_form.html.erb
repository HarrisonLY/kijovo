<%= form_for(@product) do |f| %>
  <%= render "shared/errors" %>

  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description, cols: 40, rows: 8 %>
  </p>
  <p>
    <%= f.label :price %><br/>
    <%= f.number_field :price %>
  </p>
  <p>
    <%= f.label :releasing_on %><br/>
	<%= f.date_field :releasing_on %>
  </p>
  <p>
  <%= f.label :website %><br/>
  <%= f.text_field :website %>
  </p>
  <p>
  <%= f.label :industry %><br/>
  <%= f.text_field :industry %>
  </p>
  <p>
  <%= f.label :image_file_name %><br/>
  <%= f.text_field :image_file_name, size:40 %>
  </p>
    <p>
    <%= f.submit %>
    <%= link_to "Cancel", products_path %>
  </p>
  <% end %>