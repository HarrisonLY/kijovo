<%= form_for(@product) do |f| %>
  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description, cols: 40, rows: 8 %>
  </p>
  <p>
    <%= f.label :price %><br/>
    <%= f.number_field :price %>
  </p>
  <p>
    <%= f.label :releasing_on %><br/>
	<%= f.date_field :releasing_on %>
  </p>
  <p>
    <%= f.submit %>
    <%= link_to "Cancel", products_path %>
  </p>
  <% end %>