<article>
  <header>
    <h1><%= @product.name %></h1>
  </header>
  <h2>Description</h2>
  <p>
    <%= @product.description %>
  </p>
  <h3>Releasing On</h3>
  <p>
    <%= @product.releasing_on %>
  </p>
  <h3>Price</h3>
  <p>
    <%= number_to_currency(@product.price) %>
  </p>
  <h3>Website</h3>
<p>
  <%= @product.website %>
</p>

<h3>Image</h3>
<%= image_for(@product) %>
</article>

<%= link_to "All Products", products_path %>
<%= link_to "Edit", edit_product_path(@product) %>